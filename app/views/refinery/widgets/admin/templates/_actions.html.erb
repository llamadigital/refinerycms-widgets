<ul>
  <% if ::Refinery::Widgets::Admin::TemplatesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.widgets_admin_templates_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_widgets_admin_template_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Widgets::Admin::TemplatesController.sortable? && ::Refinery::Widgets::Template.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Templates"),
                 refinery.widgets_admin_templates_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Templates"),
                 refinery.widgets_admin_templates_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
