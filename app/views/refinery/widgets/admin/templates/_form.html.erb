<%= form_for [refinery, :widgets_admin, @template] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @template,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render 'page_parts', f: f, tabbed_fields: Refinery::Widgets::Template.parts %>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.templates.admin.templates.template'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @template.name) -%>
<% end -%>
